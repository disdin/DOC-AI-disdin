# Application Settings
APP_NAME="AI Document Intelligence System"
ENV="development"

# MongoDB Configuration
# For local MongoDB:
MONGO_URI="mongodb://localhost:27017"
# For MongoDB Atlas (replace with your connection string):
# MONGO_URI="mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority"
MONGO_DB_NAME="doc_ai"

# Ollama Configuration
OLLAMA_BASE_URL="http://localhost:11434"
# Available models: mistral, llama2, phi, codellama, etc.
# Make sure to pull the model first: ollama pull <model-name>
OLLAMA_MODEL="mistral"

# JWT Authentication
# CRITICAL: You MUST generate a secure SECRET_KEY before running the application!
# Generate a secure key with: openssl rand -hex 32
# NEVER commit your actual SECRET_KEY to version control!
SECRET_KEY="REPLACE_THIS_WITH_OUTPUT_FROM_openssl_rand_hex_32"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
